    "        engine.say('Great! Thank you very much for your time! Goodbye!')\n",
    "        engine.runAndWait()\n",
    "        print('Great! Thank you very much for your time! Goodbye!')\n",
    "    \n",
    "\n",
    "#####################################\n",
    "\n",
